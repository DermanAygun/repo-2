{% extends 'base.html.twig' %}

{% block title %}Onderdeel index{% endblock %}

{% block body %}
    <h1>Onderdeel index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Naam</th>
                <th>Omschrijving</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for onderdeel in onderdeels %}
            <tr>
                <td>{{ onderdeel.id }}</td>
                <td>{{ onderdeel.naam }}</td>
                <td>{{ onderdeel.omschrijving }}</td>
                <td>
                    <a href="{{ path('onderdeel_show', {'id': onderdeel.id}) }}">show</a>
                    <a href="{{ path('onderdeel_edit', {'id': onderdeel.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('onderdeel_new') }}">Create new</a>
{% endblock %}
