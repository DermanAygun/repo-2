{% extends 'base.html.twig' %}

{% block title %}Locatie index{% endblock %}

{% block body %}
    <h1>Locatie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Naam</th>
                <th>Adres</th>
                <th>Plaats</th>
                <th>Straat</th>
                <th>Straat_nr</th>
                <th>Straat_nr_bijv</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for locatie in locaties %}
            <tr>
                <td>{{ locatie.id }}</td>
                <td>{{ locatie.naam }}</td>
                <td>{{ locatie.adres }}</td>
                <td>{{ locatie.plaats }}</td>
                <td>{{ locatie.straat }}</td>
                <td>{{ locatie.straatNr }}</td>
                <td>{{ locatie.straatNrBijv }}</td>
                <td>
                    <a href="{{ path('locatie_show', {'id': locatie.id}) }}">show</a>
                    <a href="{{ path('locatie_edit', {'id': locatie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('locatie_new') }}">Create new</a>
{% endblock %}
