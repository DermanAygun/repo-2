{% extends 'base.html.twig' %}

{% block title %}Afval Registreren{% endblock %}

{% block body %}
    <div class="container">
        <div class="row w-100">
            <div class="col-12 text-center" style="margin-top: 25px;">
                <h2>Registreer de locatie van de afval</h2>
            </div>
            <div class="col-12" style="margin-bottom: 25px;">
                <hr>
            </div>
            <div class="col-12" style="display: flex;justify-content: center;">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button style="border: solid 1px black; margin-top: 25px;"
                class="btn">{{ button_label|default('Afval Registreren') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
